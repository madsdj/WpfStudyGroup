<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="Foreground" Color="#333" />
    <SolidColorBrush x:Key="Background" Color="#BCC7D8" />
    <SolidColorBrush x:Key="AssetListBackground" Color="#FFF" />

    <LinearGradientBrush x:Key="SettingsPanelBackground" StartPoint="0.5,0.0" EndPoint="0.5,1.0">
        <GradientStop Offset="0" Color="#4D6082" />
        <GradientStop Offset="1" Color="#3D5277" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="HeaderBackground" StartPoint="0.5,0.0" EndPoint="0.5,1.0">
        <GradientStop Offset="0.0" Color="#FFFCF2" />
        <GradientStop Offset="0.5" Color="#FFF3CF" />
        <GradientStop Offset="0.5" Color="#FFE8A6" />
        <GradientStop Offset="1.0" Color="#FFE8A6" />
    </LinearGradientBrush>

</ResourceDictionary>